<!DOCTYPE html>
<html>
  <head>
    <title>SatoshiExplorer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Satoshi Explorer", root_path, class: "nav-link"%>
    <%= link_to "Explore", "/explorer", class: "nav-link"%>
    <%= link_to "Mining", "/mining", class: "nav-link"%>
    <%= link_to "Network", "/network", class: "nav-link"%>
    <%= link_to "Resources", "/resources", class: "nav-link"%>

    <%= form_tag("/search", method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
    <% end %>

    <%= yield %>
  </body>
</html>
